<script>
$(document).ready(function(){
	$("div.foot").hover(function(){
		$(this).css('position','relative');
		$("div#footerwrapper").css('margin-top','-45px');
		$("div#footerwrapper").css('padding-bottom','400px');
		$("div.foot").not($(this)).css('margin-top','115px');
		//$("html, body").animate({ scrollTop: $(document).height()},"slow");
		$(this).children("div.footin:eq(0)").children("ul").show();
	}, function(){
		$(this).css('position','static');
		$("div#footerwrapper").css('margin-top','70px');
		$("div.foot").not($(this)).css('margin-top','0');
		$("div#footerwrapper").css('padding-bottom','285px');
		$(this).children("div.footin:eq(0)").children("ul").hide();
	});
});
</script>
